{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "otakucollection/anime-add",
  "type": "object",
  "additionalProperties": false,
  "required": ["title", "genres"],
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 100
    },
    "genres": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    }
  }
}