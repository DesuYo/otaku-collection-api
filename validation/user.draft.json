{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "otakucollection/user",
  "type": "object",
  "required": ["username", "password", "email"],
  "properties": {
    "username": {
      "type": "string",
      "maxLength": 16,
      "pattern": "\\w+"
    },
    "password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 64,
      "pattern": "(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9]).*"
    },
    "email": {
      "type": "string",
      "maxLength": 64,
      "pattern": "^([a-zA-Z\\d\\.-]+)@([a-zA-Z\\d-]+)\\.([a-zA-Z]{2,8})(\\.[a-zA-Z]{2,8})?$"
    },
    "birthDay": {
      "type": "string",
      "pattern": "(\\d{4})/(\\d{2})/(\\d{2})"
    }
  }
}